<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:animateLayoutChanges="true"
    tools:context=".AcceuilActivity">

    <RelativeLayout
        android:id="@+id/maini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15dp">

        <ImageView
            android:paddingTop="10dp"
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/capture"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/rellay2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_below="@+id/image">

            <Button
                android:id="@+id/filtrerBtn"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bg"
                android:text="Filtrer les postes"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/pts"
                android:padding="10dp"
                android:layout_below="@+id/filtrerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="OR"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/ChercherBtn"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/pts"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg"
                android:text="CHERCHER LES POSTES"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="5dp"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>